# Program to find if x is a
# perfect square.
def isPerfectSquare(x):
    
    left = 1
    right = x
    
    while (left <= right):
    
        mid = (left + right) >> 1
        
        # Check if mid is perfect square
        if ((mid * mid) == x):
            print("Yes")
            return True
        
        # Mid is small -> go right to increase mid
        if (mid * mid < x):
            left = mid + 1
        
        # Mid is large -> to left to decrease mid
        else:
            right = mid - 1
    print("No")
    return False


